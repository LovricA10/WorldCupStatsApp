<Window x:Class="WpfApp.Forms.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Forms"
        xmlns:properties="clr-namespace:WpfApp.Properties"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.settingsTitle  }" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="225*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="225*"/>
            <ColumnDefinition Width="267*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- Tournament type -->
        <GroupBox 
        Grid.Column="0" 
        Grid.Row="0"
        x:Name="gbTournamentType"
        Margin="10" Grid.ColumnSpan="2"
        Header="{x:Static properties:Resources.tournamentType }">
            <GroupBox.Content>
            <StackPanel x:Name="PnlTournamentType" Margin="0 15 0 0">
                <RadioButton 
                GroupName="tournamentType"
                IsChecked="True"
                Tag="male"
                Margin="5"
                Content="{x:Static properties:Resources.male}" />
                <RadioButton 
                GroupName="tournamentType"
                Tag="female"
                Margin="5"
                Content="{x:Static properties:Resources.female}" />
            </StackPanel>
            </GroupBox.Content>
        </GroupBox>

        <!-- App language -->
        <GroupBox 
        Grid.Column="2" 
        Grid.Row="0" 
        x:Name="GbLanguage"
        Margin="10" Grid.ColumnSpan="2"
        Header="{x:Static properties:Resources.language}">
            <GroupBox.Content>
            <StackPanel x:Name="PnlLanguage" Margin="0 15 0 0">
                <RadioButton 
                GroupName="language"
                IsChecked="True"
                Tag="EN"
                Margin="5"
                Content="{x:Static properties:Resources.english}" />
                <RadioButton 
                GroupName="language"
                Tag="HR"
                Margin="5"
                Content="{x:Static properties:Resources.croatian}" />
            </StackPanel>
            </GroupBox.Content>
        </GroupBox>

        <!-- App size -->
        <GroupBox 
        Grid.Column="4" 
        Grid.Row="0" 
        Margin="10"
        Header="{x:Static properties:Resources.appSize}">
            <GroupBox.Content>
            <StackPanel x:Name="PnlAppSize" Margin="0 15 0 0">
                <RadioButton 
                GroupName="appSize"
                IsChecked="True"
                Tag="small"
                Margin="5"
                Content="{x:Static properties:Resources.small}" />
                <RadioButton 
                GroupName="appSize"
                Tag="medium"
                Margin="5"
                Content="{x:Static properties:Resources.medium}" />
                <RadioButton 
                GroupName="appSize"
                Tag="fullscreen"
                Margin="5"
                Content="{x:Static properties:Resources.fullScreen}" />
            </StackPanel>
            </GroupBox.Content>
        </GroupBox>

        <!-- submit button -->
        <Button 
        Grid.Column="2" 
        Grid.Row="1" 
        Margin="20,85,20,40"
        Width="150"
        HorizontalAlignment="Center"
        Click="btnSettingsSave_OnClick"
        Content="{x:Static properties:Resources.btnSettingsSave}" Grid.RowSpan="2" Grid.ColumnSpan="2" />

    </Grid>
</Window>
